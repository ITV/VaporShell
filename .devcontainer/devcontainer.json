// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.158.0/containers/powershell
{
	"name": "PowerShell",
	"dockerFile": "Dockerfile",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/usr/bin/pwsh"
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.powershell",
		"CoenraadS.bracket-pair-colorizer-2",
		"wayou.vscode-todo-highlight",
		"zhuangtongfa.material-theme",
		"coenraads.bracket-pair-colorizer-2",
		"aaron-bond.better-comments",
		"seanmcbreen.mdtools",
		"tyriar.sort-lines",
		"redhat.vscode-yaml",
		"richie5um2.vscode-sort-json",
		"esbenp.prettier-vscode",
		"robole.marky-stats",
		"robole.marky-markdown",
		"robole.marky-edit",
		"robole.marky-dynamic",
		"davidanson.vscode-markdownlint",
		"bierner.markdown-yaml-preamble",
		"darkriszty.markdown-table-prettify",
		"robole.markdown-snippets",
		"mdickin.markdown-shortcuts",
		"robole.markdown-shortcuts",
		"bierner.markdown-emoji",
		"manuth.markdown-converter",
		"bierner.markdown-checkbox",
		"pkief.markdown-checkbox",
		"yzhang.markdown-all-in-one",
		"sirtori.indenticator",
		"oderwat.indent-rainbow",
		"codezombiech.gitignore",
		"github.copilot",
		"me-dutour-mathieu.vscode-github-actions",
		"editorconfig.editorconfig",
		"aws-scripting-guy.cform",
		"tomaustin.azure-devops-yaml-pipeline-validator",
		"ms-azure-devops.azure-pipelines"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	//"postCreateCommand": "pwsh -c 'Copy-Item ./.devcontainer/profile.ps1 -Destination /home/vscode/.config/powershell -Force'",
	// Uncomment the next line to run commands after the container is created. This gets run in bash which is why we call `pwsh`.
	//"postAttachCommand": "pwsh -c 'Copy-Item ./.devcontainer/profile.ps1 -Destination /home/vscode/.config/powershell -Force'",
	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}